<table border="0" style="font-family: sans-serif; max-width: 800px;">
	<tr>
		<td>
			<h1 style="font-size: 20px;">Collabish - Issue Report</h1>
		</td>
	</tr>
	<tr>
		<td style="padding: 15px 0 50px; font-family: monospace; font-size: 14px;">
			<dl>
				<dt><strong>Reporting User</strong></dt>
				<dd>
					<dl style="margin-top: 0; padding-top: 0;">
						<dt>Mongo ObjectId</dt>
						<dd>{{ user._id }}</dd>

						<dt>Username</dt>
						<dd>{{ user.username }}</dd>

						<dt>Email</dt>
						<dd>{{ user.email }}</dd>
					</dl>
				</dd>

				<dt><strong>Subject</strong></dt>
				<dd>{{ subject }}</dd>

				<dt><strong>Description</strong></dt>
				<dd>{{ description }}</dd>
			</dl>
		</td>
	</tr>
</table>